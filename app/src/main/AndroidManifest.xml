            android:name=".BluetoothMainList"
            android:label="List Device"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".AirActivity"
            android:label="" />
        <activity android:name=".SettingSwitchModeOffOnActivity" />
        <activity
            android:name=".AlarmActivity"
            android:label="" />
        <activity
            android:name=".DoorActivity"
            android:label="" />
        <activity
            android:name=".LcdActivity"
            android:label="" />
        <activity android:name=".youtube.YouTubeActivity"></activity>
        <activity
            android:name=".MainPage"
            android:label="@string/title_activity_main_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".FirstScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
    </application>

</manifest>